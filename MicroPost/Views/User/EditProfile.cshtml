@model MicroPost.Models.UserModel

@{
    ViewBag.Title = "Micro Post | Edit Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bodycontent">
    <h2>Edit Profile</h2>
    <hr />
    @using (Html.BeginForm()) {
        @*@Html.ValidationSummary(true, "Profile update failed.");*@

        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Name, new { @for = "name" })
                @Html.TextBoxFor(u => u.Name, new { @class = "form-control", @id = "name" })
                @Html.ValidationMessageFor(u => u.Name)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.EmailId, new { @for = "email" })
                @Html.TextBoxFor(u => u.EmailId, new { @class = "form-control", @id = "email" })
                @Html.ValidationMessageFor(u => u.EmailId)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Password, new { @for = "password" })
                @Html.PasswordFor(u => u.Password, new { @class = "form-control", @id = "password" })
                @Html.ValidationMessageFor(u => u.Password)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.LabelFor(u => u.Address, new { @for = "address" })
                @Html.TextBoxFor(u => u.Address, new { @class = "form-control", @id = "address" })
                @Html.ValidationMessageFor(u => u.Address)
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-success" />
            </div>
        </div>
        <div class="clearfix"></div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="@(ViewBag.Message == "" ? "label-success" : "label-danger")">@(ViewBag.Message == "" ? "Profile updated successfully." : ViewBag.Message)</label>
            </div>
        </div>
    }
</div>
